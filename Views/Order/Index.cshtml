@using PuhdasApp.Models;
@model IEnumerable<Order>

<h2>All Orders</h2>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Size</th>
                <th>Quantity</th>
                <th>Created at</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>@item.Size</td>
                    <td>@item.Quantity</td>
                    <td>@item.CreatedAt</td>
                    <td><a asp-action="Detail" asp-controller="User" asp-route-id="@item.AppUserId" asp-area="" type="button" class="btn btn-success">Customer Details</a></td>
                </tr>
            </tbody>
        }
    </table>
    <div />
</div>