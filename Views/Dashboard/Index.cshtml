@using PuhdasApp.ViewModels;
@model DashboardViewModel

<h1 class="display-4 fw-normal">User Dashboard</h1>
<div style="margin-top:20px">
    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="Index">New Order</a>
    <a class="btn btn-secondary" asp-route-id="AppUserId" asp-area="" asp-controller="User" asp-action="UserProfile">Profile</a>
</div>
<center style="padding-top: 50px">
    <h3>All Orders</h3>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
               @if(Model.Orders.Count() != 0)
                    {
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Size</th>
                                <th>Quantity</th>
                                <th>Created at</th>


                            </tr>
                        </thead>
                        @foreach (var item in Model.Orders)
                        {
                            <tbody>
                                <tr>
                                    <td>@item.Size</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.CreatedAt</td>

                                </tr>
                            </tbody>
                        }

                    </table>
               }
               else
               {
                    <h5>No Orders yet!</h5>
               }
            </div>
        </div>
    </div>
</center>
