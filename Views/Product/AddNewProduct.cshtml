@using PuhdasApp.ViewModels;
@model AddNewProductViewModel

<body class="text-center">
    @{
        ViewData["Title"] = "LogIn";
    }
    <center class="album py-5 bg-light">
        <div class="row">

            @if (TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span><b>Sorry!</b> - @TempData["Error"]</span>
                </div>
            }

            <form method="post" asp-action="AddNewProduct" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Product Name</label>
                    <input style="width:50%" asp-for="Name" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Name of product">
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
                <div class="form-group">
                    <label asp-for="Price">Price of product</label>
                    <input style="width:50%" asp-for="Price" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Price of product">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image">Image of product</label>
                    <input style="width:50%" asp-for="Image" type="file" class="form-control" aria-describedby="emailHelp">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </center>
</body>